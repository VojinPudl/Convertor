<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="50.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.convertor.Loading">
    <BorderPane prefHeight="50.0" prefWidth="200.0">
        <center>
            <ToolBar prefHeight="52.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Label alignment="CENTER" contentDisplay="CENTER" text="Converting ..." textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <padding>
                        <Insets left="5.0" right="20.0"/>
                    </padding>
                </Label>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@Image/Loading.gif"/>
                </ImageView>
            </ToolBar>
        </center>
    </BorderPane>
</AnchorPane>
